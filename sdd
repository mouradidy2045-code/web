    <script>
        // Simple UI demo: toggles "ejected" state
        const card = document.getElementById('card');
        const eject = document.getElementById('eject');
        const safely = document.getElementById('safely');
        const title = document.getElementById('title');
        const subtitle = document.getElementById('subtitle');

        function setEjected(e) {
            if (e) {
                card.classList.add('disconnected');
                title.textContent = 'No media';
                subtitle.textContent = 'Device removed';
                eject.textContent = 'Insert';
                safely.disabled = true;
                safely.style.opacity = 0.5;
            } else {
                card.classList.remove('disconnected');
                title.textContent = 'USB Drive (E:)';
                subtitle.textContent = 'Windows 11 — Removable storage';
                eject.textContent = 'Eject';
                safely.disabled = false;
                safely.style.opacity = 1;
            }
        }

        eject.addEventListener('click', () => {
            const ejected = card.classList.contains('disconnected');
            setEjected(!ejected);
        });

        safely.addEventListener('click', () => {
            // temporary micro-feedback
            safely.textContent = 'Preparing...';
            safely.disabled = true;
            setTimeout(() => {
                safely.textContent = 'Safely Removed';
                setEjected(true);
            }, 900);
        });
    </script>
